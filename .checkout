#!/bin/bash
echo Please login
while [ git config --global credential.helper wincred -ne 0 ]; do
    echo Your credentials were incorrect
done

echo Starting xampp
if [ -f C:/xampp/xampp-control.exe ]; then
    C:/xampp/xampp-control.exe &
else
    echo xampp is found in C:/xampp/xampp-control.exe
    exit
fi

echo Checking out to the specified branch
git fetch
if [ $# -eq 0 ]; then
    git checkout dev
    git pull origin dev
else
    if $(git branch | grep -q $1); then
        git checkout $1
        git pull origin $1
    else
        echo That branch does not exist
    fi
fi

echo Running setup and deployment
composer install
npm install
npm run dev
php artisan migrate:fresh --seed
php artisan serve

