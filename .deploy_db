#!/bin/bash
if [ $1 == 'dev' ]; then
    echo Copying dev env variables
    cp --remove-destination .env.dev .env
elif [ $1 == 'master' ]; then
    echo Copying master env variables
    cp --remove-destination .env.master .env
else
    echo "unknown parameter"
    exit
fi

phpenv config-add .php.ini
composer self-update
composer install --no-interaction
npm install
php artisan migrate:refresh --seed
